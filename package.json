{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "chokidar-cli": "^2.1.0",
    "framer-motion": "^1.11.1",
    "gsap": "^3.2.6",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "build:tailwind": "tailwind build src/styles/tailwind.css -o src/styles/main.css",
    "watch:tailwind": " chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/styles/main.css -c 'npm build:tailwind' ",
    "start": "npm-run-all build:tailwind --parallel watch:tailwind start:react",
    "start:react": "react-scripts start",
    "prebuild": "npm run build:tailwind",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.3"
  }
}
